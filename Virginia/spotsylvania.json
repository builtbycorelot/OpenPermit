{
  "@context": {
    "@vocab": "https://openpermit.org/ontologies/openpermit#",
    "schema": "https://schema.org/",
    "dcterms": "http://purl.org/dc/terms/",
    "spotsylvania": "https://www.spotsylvania.va.us/"
  },
  "@id": "spotsylvania:PermittingSchema",
  "@type": "schema:DataFeed",
  "dcterms:title": "Spotsylvania County Permitting Schema",
  "dcterms:description": "Simplified ontology of Spotsylvania County permitting requirements.",
  "schema:publisher": "spotsylvania:CountyOfSpotsylvania",
  "schema:license": "schema:CreativeCommonsAttributionNonCommercialShareAlike",
  "hasPermitType": [
    {
      "@id": "spotsylvania:ResidentialPermit",
      "@type": "PermitType",
      "dcterms:title": "Residential Permit",
      "dcterms:description": "Permit for residential construction or renovations.",
      "requiresDocument": [
        "spotsylvania:ResidentialPermitApplication",
        "spotsylvania:ContractorLicense",
        "spotsylvania:SitePlan"
      ],
      "property": [
        "spotsylvania:PropertyAddress",
        "spotsylvania:ProjectDescription",
        "spotsylvania:ProjectValue"
      ]
    },
    {
      "@id": "spotsylvania:CommercialPermit",
      "@type": "PermitType",
      "dcterms:title": "Commercial Permit",
      "dcterms:description": "Permit for commercial buildings and improvements.",
      "requiresDocument": [
        "spotsylvania:CommercialPermitApplication",
        "spotsylvania:ContractorLicense",
        "spotsylvania:SitePlan"
      ],
      "property": [
        "spotsylvania:PropertyAddress",
        "spotsylvania:ProjectDescription",
        "spotsylvania:SquareFootage"
      ]
    },
    {
      "@id": "spotsylvania:OverTheCounterPermit",
      "@type": "PermitType",
      "dcterms:title": "Over-the-Counter Permit",
      "dcterms:description": "Simplified permit for minor residential projects.",
      "requiresDocument": [
        "spotsylvania:ResidentialPermitApplication"
      ],
      "property": [
        "spotsylvania:PropertyAddress",
        "spotsylvania:ProjectDescription"
      ]
    }
  ],
  "hasDocumentType": [
    {
      "@id": "spotsylvania:ResidentialPermitApplication",
      "@type": "DocumentType",
      "dcterms:title": "Residential Permit Application",
      "dcterms:description": "Application form for residential permits."
    },
    {
      "@id": "spotsylvania:CommercialPermitApplication",
      "@type": "DocumentType",
      "dcterms:title": "Commercial Permit Application",
      "dcterms:description": "Application form for commercial permits."
    },
    {
      "@id": "spotsylvania:ContractorLicense",
      "@type": "DocumentType",
      "dcterms:title": "Contractor License",
      "dcterms:description": "Virginia state contractor license."
    },
    {
      "@id": "spotsylvania:SitePlan",
      "@type": "DocumentType",
      "dcterms:title": "Site Plan",
      "dcterms:description": "Plan showing property layout and proposed development."
    }
  ],
  "hasPropertyType": [
    {
      "@id": "spotsylvania:PropertyAddress",
      "@type": "PropertyType",
      "dcterms:title": "Property Address",
      "schema:domainIncludes": [
        "spotsylvania:ResidentialPermit",
        "spotsylvania:CommercialPermit",
        "spotsylvania:OverTheCounterPermit"
      ],
      "schema:rangeIncludes": "schema:PostalAddress"
    },
    {
      "@id": "spotsylvania:ProjectDescription",
      "@type": "PropertyType",
      "dcterms:title": "Project Description",
      "schema:domainIncludes": [
        "spotsylvania:ResidentialPermit",
        "spotsylvania:CommercialPermit",
        "spotsylvania:OverTheCounterPermit"
      ],
      "schema:rangeIncludes": "schema:Text"
    },
    {
      "@id": "spotsylvania:ProjectValue",
      "@type": "PropertyType",
      "dcterms:title": "Project Value",
      "schema:domainIncludes": [
        "spotsylvania:ResidentialPermit",
        "spotsylvania:CommercialPermit"
      ],
      "schema:rangeIncludes": "schema:Number"
    },
    {
      "@id": "spotsylvania:SquareFootage",
      "@type": "PropertyType",
      "dcterms:title": "Square Footage",
      "schema:domainIncludes": [
        "spotsylvania:CommercialPermit"
      ],
      "schema:rangeIncludes": "schema:Number"
    }
  ]
}
